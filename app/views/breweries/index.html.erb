 

<h1>Breweries</h1>
<p>Number of active breweries: <%= @breweries.count %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Established</th>
      <th scope="col">Number of beers</th>
      <th score="col">Number of ratings</th>
    </tr>
  </thead>
  <tbody>
  <% @breweries.each do |brewery| %>
    <tr>
      <td><%= brewery.name%></td>
      <td><%= brewery.year%></td>
      <td><%= brewery.beers.count%></td>
      <td><%= brewery.ratings.count%></td>
      <td><%= link_to "Go to page", brewery, class:'btn btn-primary btn-sm'%></td>
    </tr>
  <% end %>
  </tbody>
</table>

