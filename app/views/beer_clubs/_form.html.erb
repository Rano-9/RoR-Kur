
 <%= form_with(model: beer_club) do |form| %>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <%= form.text_field :name%>
    <div id="nameHelp" class="form-text">We'll never share your beerclub name with anyone else.</div>
  </div>

  <div class="mb-3">
    <label for="year" class="form-label">Founded</label>
    <%= form.number_field :founded%>
  </div>

  <div class="mb-3">
    <label for="City" class="form-label">City</label>
    <%= form.text_field :city%>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
<%end%>