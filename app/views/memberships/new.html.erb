<h2>Create new rating</h2>
<% if @beer_club.count != 0%>
    <%=form_for (@membership) do |member|%>
        <% if @membership.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(@membership.errors.count, "error") %> prohibited rating from being saved:</h2>

            <ul>
            <% @membership.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
        <%end%>

        <%= member.select :beer_club_id, options_from_collection_for_select(@beer_club, :id, :to_s)%>
        <%= member.submit %>
    <%end%>
<%else%>
No clubs to join
<% end %>