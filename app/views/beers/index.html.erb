<p style="color: green"><%= notice %></p>

<h1>Beer listing</h1>
<p>Number of beers: <%= Beer.count%></p>
<div id="beers">
  <% @beers.each do |beer| %>
    <p>
    <strong>Name:</strong>
    <%= link_to beer.name, beer %>
    </p>

    <p>
      <strong>Style:</strong>
      <%= beer.style %>
    </p>
    
    <p>
      <strong>Brewery:</strong>
      <%= link_to beer.brewery.name, beer.brewery %>

    </p>

  <% end %>
</div>

<% if not current_user.nil? %>
  <%= link_to "New beer", new_beer_path %>
<% end %>